#pragma once
#include "TStd.h"
class TBase
{
public:
	virtual bool     Init() = 0; // 초기화
	virtual bool     Frame() = 0;// 계산
	virtual bool     Render() = 0;// 드로우
	virtual bool     Release() = 0;// 삭제, 소멸
public:
	TBase();
	virtual ~TBase();
};

#pragma once
#include "TWindow.h"

class TCore : public TWindow
{
public :

public:
	virtual bool     Init(); // 초기화
	virtual bool     Frame();// 계산
	virtual bool     Render();// 드로우
	virtual bool     Release();// 삭제, 소멸
public:
	bool Run();
	bool GameRun();
	bool GameInit();
	bool GameFrame();
	bool GameRender();
	bool GameRelease();
public:
	TCore();
	virtual ~TCore();
};

#pragma once
#include <windows.h>
#include <tchar.h>#pragma once
#include "TStd.h"

class TWindow
{
public:
	HWND m_hWnd;
	RECT m_rtWindow;
	RECT m_rtClient;
	int  m_iWidth;
	int  m_iHeight;
public:
	void SetRect(int iWidth, int iHeight);
	bool SetWindow( HINSTANCE hInstatnce,
		TCHAR* titleName = L"Sample Project",
		int iX=0, int iY=0, int iWidth=800,
		int iHeight=600);
public:
	TWindow();
	virtual ~TWindow();
};

